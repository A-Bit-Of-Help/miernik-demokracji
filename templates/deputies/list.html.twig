{% block body %}
    <style>
        .card {
            max-width: 400px;
            min-width: 380px;
            padding: 6px 6px;
        }
    </style>
    <div class="d-flex card-group justify-content-center">
        {% for deputy in deputies %}
            <div class="card ">
                <div class="card-horizontal">
                    <div class="img-square-wrapper">
                        <img class="" src="{{ deputy.photo }}" alt="Deputies photo">
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">{{ deputy.firstname }} {{ deputy.middlename }} {{ deputy.surname }}</h4>
                        <p>{{ deputy.details }}</p>
                    </div>
                    <div class="img-square-wrapper">
                        <a href="{{ path('government_parties_show', {'id': deputy.governmentParties.id}) }}">
                        <img class="" src="{{ deputy.governmentParties.logo }}" alt="Government parties logo"
                             height="53">
                        </a>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="{{ deputy.link }}">
                            <span class="badge badge-info">
                                {% trans %}deputies.list.link.gov{% endtrans %}
                            </span>
                    </a>
                    <a href="{{ path('deputies_show', {'id': deputy.id}) }}">
                            <span class="badge badge-info">
                                {% trans %}deputies.list.button.show{% endtrans %}
                            </span>
                    </a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('deputies_edit', {'id': deputy.id}) }}">
                            <span class="badge badge-info">
                                {% trans %}deputies.list.button.edit{% endtrans %}
                            </span>
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
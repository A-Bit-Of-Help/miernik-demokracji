{% extends 'base.html.twig' %}

{% block title %}{% trans %}government_meetings_date.index.site.title{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}government_meetings_date.index.title{% endtrans %}</h1>
    {% if is_granted("ROLE_ADMIN") %}
        <a class="btn btn-success" href="{{ path('government_meetings_date_new') }}">
            {% trans %}government_meetings_date.index.button.new{% endtrans %}
        </a>
    {% endif %}
    <table class="table">
        <thead>
        <tr>
            <th>{% trans %}government_meetings_date.index.table.id{% endtrans %}</th>
            <th>{% trans %}government_meetings_date.index.table.date{% endtrans %}</th>
            <th>{% trans %}government_meetings_date.index.table.actions{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for government_meetings_date in government_meetings_dates %}
            <tr>
                <td>{{ government_meetings_date.id }}</td>
                <td>{{ government_meetings_date.date ? government_meetings_date.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('government_meetings_date_show', {'id': government_meetings_date.id}) }}">
                        <span class="badge badge-info">
                            {% trans %}government_meetings_date.index.table.button.show{% endtrans %}
                        </span>
                    </a>
                    {% if is_granted("ROLE_ADMIN") %}
                        <a href="{{ path('government_meetings_date_edit', {'id': government_meetings_date.id}) }}">
                        <span class="badge badge-info">
                            {% trans %}government_meetings_date.index.table.button.edit{% endtrans %}
                        </span>
                        </a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{% trans %}government_meetings_date.index.table.no_found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

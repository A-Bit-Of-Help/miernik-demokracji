{% extends 'base.html.twig' %}

{% block title %}Documents index{% endblock %}

{% block body %}
    <h1>Documents index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Path</th>
                <th>GovPath</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.id }}</td>
                <td>{{ document.number }}</td>
                <td>{{ document.path }}</td>
                <td>{{ document.govPath }}</td>
                <td>
                    <a href="{{ path('documents_show', {'id': document.id}) }}"><span class="badge badge-info">show</span></a>
                    <a href="{{ path('documents_edit', {'id': document.id}) }}"><span class="badge badge-info">edit</span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('documents_new') }}">Create new</a>
{% endblock %}

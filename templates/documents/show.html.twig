{% extends 'base.html.twig' %}

{% block title %}Documents{% endblock %}

{% block body %}
    <h1>Documents</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ document.number }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ document.path }}</td>
            </tr>
            <tr>
                <th>GovPath</th>
                <td>{{ document.govPath }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('documents_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('documents_edit', {'id': document.id}) }}">edit</a>

    {{ include('documents/_delete_form.html.twig') }}
{% endblock %}

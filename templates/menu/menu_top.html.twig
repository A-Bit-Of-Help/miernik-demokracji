{% block menu_top %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">
            <img src="{{ asset('images/logo.jpg') }}" width="30" height="30" class="d-inline-block align-top" alt=""/>
            {% trans %}menu.title{% endtrans %}
        </a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link"
                       href={{ path('government_parties_index') }}>{% trans %}menu.parties{% endtrans %}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href={{ path('deputies_index') }}>{% trans %}menu.deputies{% endtrans %}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href={{ path('timetable_index') }}>{% trans %}menu.timetable{% endtrans %}</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href={{ path('parser_index') }}>{% trans %}menu.parsers{% endtrans %}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href={{ path('registration') }}>{% trans %}menu.registration{% endtrans %}</a>
                    </li>
                {% endif %}
            </ul>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="btn btn-warning my-2 my-sm-0" href={{ path('app_logout') }}>{% trans %}menu.logout{% endtrans %}</a>
            {% else %}
                <a class="btn btn-success my-2 my-sm-0" href={{ path('app_login') }}>{% trans %}menu.login{% endtrans %}</a>
            {% endif %}
        </div>
    </nav>
{% endblock %}